<div class="box">
  <%= form_for(post) do |f| %>
      <% if post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, :class => 'control-label col-lg-2' %>
        <%= f.text_field :title, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :image, :class => 'control-label col-lg-2' %>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
        <%= f.label :body, :class => 'control-label col-lg-2' %>
        <%= f.text_area :body, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :post_type, :class => 'control-label col-lg-2' %><br>
        <%= f.select :post_type, Post::Post_TYPES,
               prompt: 'Select type post', :class => 'form-control' %>
      </div>

      <div class="col-lg-10">
        <%= f.submit 'create', class: 'btn' %>
      </div>
  <% end %>
</div>