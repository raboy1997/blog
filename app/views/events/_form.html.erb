<div class="box">
  <%= form_for(@event) do |f| %>
      <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% @event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :title, :class => 'control-label col-lg-2' %>
        <%= f.text_field :title, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :image, :class => 'control-label col-lg-2' %>
        <%= f.file_field :image %>
      </div>

      <div class="form-group">
        <%= f.label :body, :class => 'control-label col-lg-2' %>
        <%= f.text_area :body, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :start_event_at, :class => 'control-label col-lg-2' %>
        <%= f.datetime_field :start_event_at %>
      </div>



      <div class="col-lg-10">
        <%= f.submit 'create', class: 'btn' %>
      </div>
  <% end %>
</div>